<h1>My Tasks</h1>
<% @tasks.each do |task| %>
  <h3>
  [<%= task.completed ? "x" : "   " %>] <%= link_to task.title, task_path(task) %>
  <%= link_to "Delete Task",
            task_path(task),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
  </h3>
<% end %>
<p>
  <%= link_to "+ creat a new tack", new_task_path %>
</p>
